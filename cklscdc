[32m+[m[32m    const particlesCount = anime.random(3, 5);[m
[32m+[m
[32m+[m[32m    for (let i = 0; i < particlesCount; i++) {[m
[32m+[m[32m        const shard = document.createElement('div');[m
[32m+[m[32m        shard.className = 'note-shard';[m
[32m+[m[32m        shard.style.left = `${x}%`;[m
[32m+[m[32m        shard.style.top = `${y}%`;[m
[32m+[m[32m        // Rotaci√≥n aleatoria inicial[m
[32m+[m[32m        shard.style.transform = `rotate(${anime.random(0, 360)}deg)`;[m
[32m+[m[32m        container.appendChild(shard);[m
[32m+[m
[32m+[m[32m        // Animar el pedazo saliendo disparado[m
[32m+[m[32m        anime({[m
[32m+[m[32m            targets: shard,[m
[32m+[m[32m            translateX: anime.random(-30, 30), // Dispersi√≥n X[m
[32m+[m[32m            translateY: anime.random(-20, 50), // Dispersi√≥n Y (caen)[m
[32m+[m[32m            rotate: anime.random(0, 720), // Giran locamente[m
[32m+[m[32m            opacity: [1, 0],[m
[32m+[m[32m            scale: [1, 0],[m
[32m+[m[32m            duration: anime.random(600, 1000),[m
[32m+[m[32m            easing: 'easeOutExpo',[m
[32m+[m[32m            complete: () => shard.remove()[m
[32m+[m[32m        });[m
[32m+[m[32m    }[m
[32m+[m[32m}[m
